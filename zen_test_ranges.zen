// Test range and loop functionality from LANGUAGE_SPEC.zen

{ io } = @std

main = () void {
    // Test basic range loop as shown in spec
    io.println("Basic range test:")
    (0..5).loop((i) {
        io.println("Index: ${i}")
    })
    
    // Test inclusive range
    io.println("\nInclusive range test:")
    (1..=3).loop((n) {
        io.println("Number: ${n}")
    })
    
    // Test range with step (from spec)
    io.println("\nStep range test:")
    (0..10).step(2).loop((i) {
        io.println("Step: ${i}")
    })
    
    // Test infinite loop with break
    io.println("\nInfinite loop test:")
    counter ::= 0
    loop(() {
        counter = counter + 1
        io.println("Count: ${counter}")
        counter >= 3 ?
            | true { break }
            | false { }
    })
    
    io.println("Done!")
}