// Test pattern matching with ? operator
io = @std

main = () i32 {
    io.println("Testing pattern matching with ? operator...")
    
    // Simple boolean pattern - from LANGUAGE_SPEC.zen
    is_ready = true
    is_ready ? {
        io.println("Ready to start!")
    }
    
    // Boolean with both branches  
    has_data = false
    has_data ?
        | true { io.println("Has data") }
        | false { io.println("No data yet") }
    
    // Value pattern matching
    score = 85
    result = score ?
        | 100 { "Perfect" }
        | 85 { "Good" }
        | _ { "Other" }
    
    io.print("Score result: ")
    io.println(result)
    
    io.println("Pattern matching test complete!")
    
    return 0
}