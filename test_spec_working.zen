// Test file to check what's working from the spec

{ io } = @std

main = () void {
    // Test 1: Immutable assignment
    x = 42
    message = "Hello from Zen!"
    
    // Test 2: Mutable assignment
    counter ::= 0
    counter = counter + 1
    counter = counter + 1
    
    // Test 3: Boolean pattern matching (short form)
    is_ready = true
    is_ready ? {
        io.println("System is ready!")
    }
    
    // Test 4: Full pattern matching
    status = false
    status ?
        | true { io.println("Status: Active") }
        | false { io.println("Status: Inactive") }
    
    // Test 5: Integer pattern matching
    value = 5
    value ?
        | 0 { io.println("Zero") }
        | 1 { io.println("One") }
        | 5 { io.println("Five") }
        | _ { io.println("Other") }
    
    // Test 6: Range syntax
    range = (0..10)
    
    // Test 7: Method call (UFC)
    nums = [1, 2, 3]
    
    io.println("Tests completed!")
}