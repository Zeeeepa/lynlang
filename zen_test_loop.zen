// Test loop construct from the spec
{ io } = @std

main = () void {
    io.println("Testing loop constructs")
    
    // Infinite loop with break
    counter ::= 0
    loop(() {
        counter = counter + 1
        io.println("Loop iteration: ${counter}")
        
        counter > 3 ?
            | true { break }
            | false { }
    })
    
    io.println("After loop, counter = ${counter}")
    io.println("Loop test complete")
}