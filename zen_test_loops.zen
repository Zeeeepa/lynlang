// Test loop constructs from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    // Test range iteration (line 418)
    (0..5).loop((i) {
        io.println("Count: ${i}")
    })
    
    // Test infinite loop with break (line 440)
    counter ::= 0
    loop(() {
        counter = counter + 1
        counter > 3 ?
            | true { break }
            | false { io.println("Loop count: ${counter}") }
    })
}