// Test Zen features from LANGUAGE_SPEC.zen

main = () void {
    // Test immutable assignment (no type annotation)
    x = 10
    
    // Test mutable assignment with ::=
    y ::= 20
    y = 30  // Should be able to reassign
    
    // Test type annotations
    z: i32 = 42
    w :: i32 = 50  // Mutable with type
    
    // Test boolean literals and pattern matching
    is_ready = true
    is_ready ? {
        @std.io.println("Ready!")
    }
    
    // Test @std.io functions
    @std.io.println("Hello from Zen!")
    
    // Test pattern matching with if-else style
    has_data = false
    has_data ?
        | true { @std.io.println("Has data") }
        | false { @std.io.println("No data") }
}