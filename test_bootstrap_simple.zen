// Simple bootstrap test for self-hosting
// Tests basic compilation capabilities

io := @std.io

// Test basic arithmetic
test_arithmetic = () bool {
    x := 10
    y := 20
    z := x + y
    
    return z == 30
}

// Test string operations
test_strings = () bool {
    greeting := "Hello"
    target := "World"
    
    // Just test that we can work with strings
    return greeting == "Hello"
}

// Test control flow
test_control_flow = () i32 {
    count := 0
    i := 0
    
    loop (i < 5) {
        count = count + 1
        i = i + 1
    }
    
    return count
}

main = () i32 {
    io.print("=== Zen Bootstrap Test (Simple) ===\n\n")
    
    // Test 1: Arithmetic
    io.print("Test 1: Arithmetic... ")
    if test_arithmetic() {
        io.print("PASS\n")
    } else {
        io.print("FAIL\n")
    }
    
    // Test 2: Strings
    io.print("Test 2: Strings... ")
    if test_strings() {
        io.print("PASS\n")
    } else {
        io.print("FAIL\n")
    }
    
    // Test 3: Control Flow
    io.print("Test 3: Control Flow... ")
    result := test_control_flow()
    if result == 5 {
        io.print("PASS\n")
    } else {
        io.print("FAIL (expected 5, got ")
        io.print_int(result)
        io.print(")\n")
    }
    
    io.print("\n=== All tests complete ===\n")
    return 0
}