// Minimal bootstrap test - simplest possible self-hosting test

io := @std.io

main = () i32 {
    io.print("Zen Bootstrap Test: ")
    
    // Test that basic compilation works
    x := 10
    y := 20
    z := x + y
    
    // Simple validation
    z == 30 ?
        | true => io.print("PASS\n")
        | false => io.print("FAIL\n")
    
    return 0
}