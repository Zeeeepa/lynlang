// Variable declarations in Zen
// Demonstrates different ways to declare variables and constants

core := @std.core
build := @std.build
io := build.import("io")

main = () void {
    // Immutable bindings (constants)
    pi := 3.14159                    // Inferred type
    max_users: u32 = 1000            // Explicit type
    greeting := "Welcome to Zen!"    // String constant
    
    // Mutable bindings (variables)
    counter ::= 0                    // Inferred mutable
    temperature:: f64 = 20.5         // Explicit mutable
    is_active ::= true               // Boolean mutable
    
    // Mutating variables
    counter = counter + 1
    temperature = temperature + 2.3
    is_active = false
    
    // Default initialization
    score:: i32                      // Initialized to 0
    name:: string                    // Initialized to ""
    
    // String interpolation
    io.print("PI value: $(pi)\n")
    io.print("Counter: $(counter)\n")
    io.print("Temperature: $(temperature)Â°C\n")
}