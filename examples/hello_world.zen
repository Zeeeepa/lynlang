// Hello World in Zen
{ io } = @std

Person: {
    age: i32,
    name: StaticString,
}

main = () i32 {
    person = Person {
        age: 13,
        name: "Tom"
    }
    person.age > 18 ?
    | true {
        io.println("Hello, Mr. ${person.name}!")
    }
    | false {
        io.println("Hello, Master ${person.name}!")
    }
    return 0
}



