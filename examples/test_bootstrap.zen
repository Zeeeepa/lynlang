// Simple test program for bootstrap compiler
io := @std.io

main = () i32 {
    // Test basic output
    io.print("Testing Zen bootstrap compiler\n")
    
    // Test variables
    x := 42
    y := 13
    result := x + y
    
    // Test control flow
    if (result > 50) {
        io.print("Result is greater than 50\n")
    } else {
        io.print("Result is less than or equal to 50\n")
    }
    
    // Test loop
    i := 0
    while (i < 5) {
        io.print("Iteration: ")
        io.print_int(i)
        io.print("\n")
        i = i + 1
    }
    
    return 0
}