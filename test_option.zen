// Test Option payload extraction
io = @std

main = () void {
    // Test with Option<f64>
    maybe_radius = Some(5.5)
    maybe_radius ?
        | Some(r) {
            io.println("Got radius")
        }
        | None {
            io.println("No radius")
        }
    
    // Test None variant
    nothing = None
    nothing ?
        | Some(x) {
            io.println("Got value")
        }
        | None {
            io.println("Got nothing")
        }
}