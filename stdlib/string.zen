// Zen Standard Library: String Type

{ compiler } = @std

String: {
    data: *u8,
    len: usize,
    capacity: usize
}

string_new = () String {
    return String {
        data: compiler.raw_allocate(1),
        len: 0,
        capacity: 1
    }
}

string_from_static = (s: StaticString) String {
    return String {
        data: compiler.raw_allocate(1),
        len: 0,
        capacity: 1
    }
}
