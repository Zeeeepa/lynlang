// Zen Standard Library: Time module

Time: {
    nanos: i64
}

Instant: {
    nanos: i64
}

Duration: {
    nanos: i64
}

NANOS_PER_MILLIS = 1000000
NANOS_PER_SECOND = 1000000000
NANOS_PER_MINUTE = 60000000000
NANOS_PER_HOUR = 3600000000000

now = () Time {
    return Time { nanos: 0 }
}

monotonic = () Instant {
    return Instant { nanos: 0 }
}
