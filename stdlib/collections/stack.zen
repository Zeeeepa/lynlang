// Zen Standard Library: Stack<T>
// LIFO data structure - placeholder for full implementation
// TODO: Implement with compiler.raw_allocate/gep/load/store once generic struct instantiation works

{ compiler } = @std

Stack<T>: {
    data: RawPtr<u8>,
    len: usize,
    capacity: usize
}

Stack<T>.size = (self: Stack<T>) usize {
    return self.len
}

Stack<T>.is_empty = (self: Stack<T>) bool {
    return self.len == 0
}

Stack<T>.clear = (self: MutPtr<Stack<T>>) void {
    self.val.len = 0
}
