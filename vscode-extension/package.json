{
  "name": "zen-language",
  "displayName": "Zen Language",
  "description": "Language support for Zen programming language",
  "version": "0.1.0",
  "publisher": "zen-lang",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:zen"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "zen",
        "aliases": ["Zen", "zen"],
        "extensions": [".zen"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "zen",
        "scopeName": "source.zen",
        "path": "./syntaxes/zen.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Zen Language",
      "properties": {
        "zen.serverPath": {
          "type": "string",
          "default": "zen-lsp",
          "description": "Path to the Zen language server executable"
        },
        "zen.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VS Code and the Zen language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0"
  }
}