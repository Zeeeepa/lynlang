{
    "name": "zen-lang",
    "displayName": "Zen Language Support",
    "description": "Language support for Zen programming language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": ["Programming Languages"],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [{
            "id": "zen",
            "aliases": ["Zen", "zen"],
            "extensions": [".zen"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "zen",
            "scopeName": "source.zen",
            "path": "./syntaxes/zen.tmLanguage.json"
        }],
        "configuration": {
            "type": "object",
            "title": "Zen",
            "properties": {
                "zen.server.path": {
                    "type": "string",
                    "default": "zen-lsp",
                    "description": "Path to the Zen language server executable"
                }
            }
        }
    },
    "activationEvents": [
        "onLanguage:zen"
    ],
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    }
}