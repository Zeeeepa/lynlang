// Test mutable assignment with ::=
{ io } = @std

main = () void {
    io.println("Testing mutable variables with ::=")
    
    // Create mutable variable with ::=
    counter ::= 0
    io.print_int(counter)
    io.println("")
    
    // Modify it - this should work
    counter = 1
    io.print_int(counter) 
    io.println("")
    
    counter = 42
    io.print_int(counter)
    io.println("")
    
    io.println("Success! Mutable variables work.")
}