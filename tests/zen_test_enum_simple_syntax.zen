// Test simple enum syntax from LANGUAGE_SPEC.zen
{ io, Option, Result } = @std

// Simple enum without payload
Shape: Circle | Rectangle

// Mixed enum from LANGUAGE_SPEC
GameEntity: Player | Enemy | Powerup

main = () void {
    io.println("Testing simple enum syntax")
    
    // Use Shape enum
    s: Shape = Shape.Circle
    s ?
        | Circle { io.println("It's a circle") }
        | Rectangle { io.println("It's a rectangle") }
    
    // Use Option
    opt: Option<i32> = Option.Some(42)
    opt ?
        | Some(v) { io.println("Value: ${v}") }
        | None { io.println("No value") }
    
    // Use GameEntity
    entity: GameEntity = GameEntity.Player
    entity ?
        | Player { io.println("Player entity") }
        | Enemy { io.println("Enemy entity") }
        | Powerup { io.println("Powerup entity") }
    
    io.println("Enum syntax test complete")
}