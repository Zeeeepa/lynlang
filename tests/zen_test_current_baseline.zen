// Test current working features
{ io, math } = @std

// Structs defined at top level
Point: { x: f64, y: f64 }

main = () void {
    io.println("=== Testing Current Features ===")
    
    // Basic variables
    x = 10
    y ::= 20
    io.println("Basic vars: x=${x}, y=${y}")
    
    // Pattern matching on bool
    flag = true
    flag ? 
        | true { io.println("Pattern: true branch") }
        | false { io.println("Pattern: false branch") }
    
    // Loops and ranges
    io.println("Range loop:")
    (0..3).loop((i) {
        io.println("  i=${i}")
    })
    
    // Struct usage
    p = Point { x: 1.0, y: 2.0 }
    io.println("Point: x=${p.x}, y=${p.y}")
    
    // Math constant
    io.println("Math.pi = ${math.pi}")
    
    io.println("=== Complete ===")
}