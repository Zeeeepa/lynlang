// Basic math operations test
io := @std.io

// Test basic arithmetic
test_math = () void {
    io.print("Testing basic math operations\n");
    
    // Addition
    sum := 5 + 3
    sum == 8 ?
        | true => io.print("[PASS] Addition: 5 + 3 = 8\n")
        | false => io.print("[FAIL] Addition failed\n")
    
    // Subtraction  
    diff := 10 - 4
    diff == 6 ?
        | true => io.print("[PASS] Subtraction: 10 - 4 = 6\n")
        | false => io.print("[FAIL] Subtraction failed\n")
    
    // Multiplication
    prod := 6 * 7
    prod == 42 ?
        | true => io.print("[PASS] Multiplication: 6 * 7 = 42\n")
        | false => io.print("[FAIL] Multiplication failed\n")
    
    // Division
    quot := 20 / 4
    quot == 5 ?
        | true => io.print("[PASS] Division: 20 / 4 = 5\n")
        | false => io.print("[FAIL] Division failed\n")
    
    // Modulo
    rem := 17 % 5
    rem == 2 ?
        | true => io.print("[PASS] Modulo: 17 % 5 = 2\n")
        | false => io.print("[FAIL] Modulo failed\n")
}

main = () i32 {
    io.print("=== Basic Math Test Suite ===\n");
    test_math();
    io.print("=== Tests Complete ===\n");
    return 0
}