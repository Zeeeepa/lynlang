// Test Option type from spec
{ io } = @std

// Option type from spec line 110
Option<T>: Some(T) | None

main = () void {
    // Option handling - no null! (spec line 461)
    maybe_radius: Option<f64> = Some(5.5)
    maybe_radius ?
        | Some(r) {
            io.println("Radius found:")
            io.println(r)
        }
        | None {
            io.println("No radius provided")
        }
    
    // Test None case
    empty: Option<f64> = None
    empty ?
        | Some(r) {
            io.println("Should not print")
        }
        | None {
            io.println("Empty option")
        }
}