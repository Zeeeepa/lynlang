// Test Option type
io = @std.io
{ Option } = @std.core

main = () void {
    // Test with Some
    maybe: Option<i32> = Option.Some(42)
    
    // Pattern match on Option
    maybe ?
        | Some(v) { io.println("Got value") }
        | None { io.println("No value") }
    
    // Test with None  
    nothing: Option<i32> = Option.None
    nothing ?
        | Some(v) { io.println("Should not print") }
        | None { io.println("No value as expected") }
}