// Test the simple test module
io = @std
{ test } = @std

// Example tests
test_addition = () bool   {
    result := 2 + 2
    return test.assert_eq_i32(result, 4, "2 + 2 should equal 4")
}

test_subtraction = () bool   {
    result := 10 - 5
    return test.assert_eq_i32(result, 5, "10 - 5 should equal 5")
}

test_multiplication = () bool   {
    result := 3 * 7
    return test.assert_eq_i32(result, 21, "3 * 7 should equal 21")
}

main = () i32   {
    test.run_suite("Basic Math Tests");
    
    test.run_test("Addition", test_addition());
    test.run_test("Subtraction", test_subtraction());
    test.run_test("Multiplication", test_multiplication());
    
    // Test a failure case
    test.run_test("Intentional Failure", false);
    
    test.print_summary();
    
    return 0
}