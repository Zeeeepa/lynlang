// Simple test for HashMap and HashSet collections
{ io } = @std

// Very simple hash function for testing
simple_hash = (n: i32) i32 {
    return n * 31
}

main = () i32 {
    // Test basic HashMap functionality 
    io.println("Testing HashMap...")
    
    // For now, just test that we can call the functions
    h1 ::= simple_hash(42)
    io.println("Hash of 42: ${h1}")
    
    h2 ::= simple_hash(100)
    io.println("Hash of 100: ${h2}")
    
    // Test basic HashSet idea
    io.println("")
    io.println("Testing HashSet concept...")
    
    // Simple set membership test
    set ::= [1, 2, 3, 4, 5]
    contains_3 ::= false
    
    // Simple loop to check membership
    (0..5).loop((i) {
        set[i] == 3 ? {
            contains_3 = true
        }
    })
    
    contains_3 ?
        | true { io.println("Set contains 3: true") }
        | false { io.println("Set contains 3: false") }
    
    return 0
}