// Test UFC (Uniform Function Call) feature
// According to LANGUAGE_SPEC.zen: any function can be called as method

{ io } = @std

// Define a simple function that can be used with UFC
double = (x: i32) i32 {
    return x * 2
}

// Function with multiple parameters
add = (x: i32, y: i32) i32 {
    return x + y
}

// String function
greet = (name: string) string {
    return "Hello, ${name}!"
}

main = () void {
    // Traditional function calls
    x = 10
    result1 = double(x)
    io.println("Traditional call: double(10) = ${result1}")
    
    // UFC - calling function as method
    val1 = 10
    result2 = val1.double()
    io.println("UFC call: 10.double() = ${result2}")
    
    // UFC with multiple parameters
    val2 = 10
    y = 5
    result3 = val2.add(y)
    io.println("UFC call: 10.add(5) = ${result3}")
    
    // UFC with strings
    name = "Zen"
    greeting = name.greet()
    io.println(greeting)
}