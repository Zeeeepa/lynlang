// Test range syntax from LANGUAGE_SPEC.zen

{ io } = @std

main = () void {
    io.println("=== Testing Range Syntax ===")
    
    // Basic range loop (line 432-434 from spec)
    io.println("Range 0..5:")
    (0..5).loop((i) {
        io.println(i)
    })
    
    // Range with step (line 437-439 from spec)
    io.println("Range 0..10 step 2:")
    (0..10).step(2).loop((i) {
        io.println(i)
    })
    
    io.println("=== Range tests completed ===")
}