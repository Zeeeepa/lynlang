// Test that loop() syntax works correctly

{ io } = @std

main = () void {
    io.println("Testing loop syntax")
    
    // Test infinite loop with break
    counter ::= 0
    loop(() {
        io.println(counter)
        counter = counter + 1
        
        counter > 3 ?
            | true { break }
            | false { }
    })
    
    io.println("Loop test completed")
}