// Minimal Bootstrap Compiler Test
// Tests the absolute basics of the compiler

{ io } = @std.io

// Test basic arithmetic
test_basic = () i32   {
    a := 10
    b := 20
    c := a + b
    
    c == 30 ?
        | true { return 1 }
        | false { return 0 }
}

// Main entry point
main = () i32   {
    io.print("Zen Bootstrap Test\n")
    
    result := test_basic()
    
    result == 1 ?
        | true {
            io.print("PASS: Basic arithmetic\n")
            return 0
        }
        | false {
            io.print("FAIL: Basic arithmetic\n")
            return 1
        }
}