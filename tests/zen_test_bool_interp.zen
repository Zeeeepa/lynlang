// Test boolean interpolation
{ io } = @std

main = () void {
    // Direct boolean literal
    io.println("Direct true: ${true}")
    io.println("Direct false: ${false}")
    
    // Boolean variable
    is_ready = true
    io.println("Variable true: ${is_ready}")
    
    is_done = false
    io.println("Variable false: ${is_done}")
}