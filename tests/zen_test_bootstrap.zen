// Simple test program for bootstrap compiler
io = @std

main = () i32   {
    // Test basic output
    io.print("Testing Zen bootstrap compiler\n")
    
    // Test variables
    x := 42
    y := 13
    result := x + y
    
    // Test control flow
    (result > 50) ? {
        io.print("Result is greater than 50\n")
    } : {
        io.print("Result is less than or equal to 50\n")
    }
    
    // Test loop
    i := 0
    loop (i < 5) {
        io.print("Iteration: ")
        io.print_int(i)
        io.print("\n")
        i = i + 1
    }
    
    return 0
}