// Test struct syntax from LANGUAGE_SPEC.zen (lines 116-120)
{ io } = @std

// Simple struct definition
Point: {
    x:: f64,     // mutable field  
    y:: f64 = 0  // with default value
}

main = () void {
    io.println("=== Testing Structs ===")
    
    // Create a Point
    p = Point { x: 10.0, y: 20.0 }
    
    // Access fields
    io.println(p.x)
    io.println(p.y)
    
    // Mutate fields
    p.x = 30.0
    p.y = 40.0
    
    io.println(p.x)
    io.println(p.y)
    
    io.println("=== Test Complete ===")
}