// Test UFC (Uniform Function Call) from LANGUAGE_SPEC.zen
{ io } = @std

// Define a function that can be called as method
area = (radius: f64) f64 {
    return 3.14159 * radius * radius
}

// Test UFC with ranges (lines 432-439)
print_num = (i: i32) void {
    io.println("Number: ${i}")
}

main = () void {
    // Test UFC with number
    r = 5.0
    a = r.area()  // UFC: function called as method
    io.println("Area: ${a}")
    
    // Test range.loop() - UFC on range
    (0..3).loop((i) {
        io.println("Loop: ${i}")
    })
    
    // Test step ranges (lines 437-439)
