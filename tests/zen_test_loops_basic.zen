// Test loops from spec
{ io } = @std

main = () void {
    // Range iteration (spec line 431)
    io.println("Range loop 0..5:")
    (0..5).loop((i) {
        io.println(i)
    })
    
    // Infinite loop with break (spec line 452)
    io.println("Loop with break:")
    counter ::= 0
    loop(() {
        counter = counter + 1
        counter > 3 ?
            | true { break }
            | false { io.println(counter) }
    })
}