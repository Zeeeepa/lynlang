// Test string interpolation issues
{ io } = @std

Option<T>: Some(T) | None

main = () void {
    io.println("Testing string interpolation:")
    
    // Test integer interpolation
    x = 42
    io.println("Integer: x = ${x}")
    
    // Test float interpolation
    y = 3.14
    io.println("Float: y = ${y}")
    
    // Test boolean interpolation
    flag = true
    io.println("Boolean: flag = ${flag}")
    
    // Test with Option type
    opt: Option<f64> = Some(5.5)
    opt ?
        | Some(val) { io.println("Option value: ${val}") }
        | None { io.println("Option is None") }
    
    // Test string concatenation in interpolation
    name = "Zen"
    io.println("Hello, ${name}!")
    
    // Test multiple interpolations
    a = 10
    b = 20
    io.println("${a} + ${b} = ${a + b}")
}