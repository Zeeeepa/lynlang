// Test basic string interpolation
{ io } = @std

main = () i32 {
    name = "Zen"
    age = 42
    pi = 3.14159
    
    io.println("Hello, ${name}!")
    io.println("Age is ${age}")
    io.println("Pi is approximately ${pi}")
    
    // Test with expressions
    result = age * 2
    io.println("Double age is ${result}")
    
    // Test with inline expressions
    io.println("Age + 10 = ${age + 10}")
    
    return 0
}