// Test struct features from LANGUAGE_SPEC.zen
{ io } = @std

// Simple struct from spec (lines 117-120)
Point: {
    x:: f64,     // mutable field
    y:: f64 = 0  // with default value
}

main = () void {
    io.println("=== Testing Struct Features ===")
    
    // Create a Point
    p1 = Point { x: 10.5, y: 20.5 }
    io.println("Point created: x=${p1.x}, y=${p1.y}")
    
    // Modify mutable field
    p1.x = 30.5
    io.println("After mutation: x=${p1.x}, y=${p1.y}")
    
    // Test with default value
    p2 = Point { x: 5.0 }
    io.println("Point with default y: x=${p2.x}, y=${p2.y}")
    
    io.println("=== Struct Tests Completed ===")
}