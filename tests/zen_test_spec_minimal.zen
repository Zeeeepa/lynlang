// Minimal test for LANGUAGE_SPEC.zen features
// Tests only the most basic features

// Import from @std
io = @std.io
{ Option } = @std.core

// Main function
main = () void {
    io.println("Testing Core Features")
    
    // Test Option with pattern matching
    maybe: Option<i32> = Option.Some(42)
    maybe ?
        | Some(v) { io.println("Got value") }
        | None { io.println("No value") }
    
    // Test boolean pattern
    is_ready = true
    is_ready ? { 
        io.println("Ready") 
    }
    
    // Test mutable variable
    x ::= 10
    x = x + 5
    io.println("x is now 15")
    
    io.println("Done")
}