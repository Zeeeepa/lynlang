// Test basic features from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    // Test immutable and mutable variables
    x = 10           // immutable
    y ::= 20         // mutable  
    y = y + 5
    
    io.println("x = ${x}")
    io.println("y = ${y}")
    
    // Test pattern matching
    is_ready = true
    is_ready ? {
        io.println("Ready!")
    }
    
    // Test Option type
    maybe_value: Option<i32> = Some(42)
    maybe_value ?
        | Some(v) { io.println("Value: ${v}") }
        | None { io.println("No value") }
}