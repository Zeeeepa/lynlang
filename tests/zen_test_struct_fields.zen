// Testing struct field access from LANGUAGE_SPEC.zen

{ io } = @std

// Simple struct from L117-120
Point: {
    x:: f64,
    y:: f64 = 0
}

main = () void {
    io.println("Testing struct fields...")
    
    // Create a point
    p = Point { x: 10.5, y: 20.5 }
    
    // Access fields
    io.println("Point x: ${p.x}")
    io.println("Point y: ${p.y}")
    
    // Mutate fields
    p.x = 30.5
    p.y = 40.5
    
    io.println("After mutation:")
    io.println("Point x: ${p.x}")
    io.println("Point y: ${p.y}")
}