// Test structs from LANGUAGE_SPEC.zen
{ io, math } = @std

// Simple struct
Point: {
    x:: f64,  // mutable field
    y:: f64 = 0  // with default value
}

// Circle struct
Circle: {
    center: Point,
    radius: f64,
}

// Function to calculate area (will use UFC later)
area = (c: Circle) f64 {
    return math.pi * c.radius * c.radius
}

main = () void {
    // Create a circle
    circle = Circle { 
        center: Point { x: 0, y: 0 }, 
        radius: 5.0 
    }
    
    io.println("Circle radius: ${circle.radius}")
    io.println("Circle area: ${area(circle)}")
    
    // Try UFC (Uniform Function Call)
    io.println("Circle area (UFC): ${circle.area()}")
}