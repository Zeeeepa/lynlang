// Test range explicitly

{ io , get_default_allocator} = @std

main = () void {
    alloc = get_default_allocator()
    // Create range first, then call loop
    my_range = (0..3)
    
    // Call loop on the range
    my_range.loop((idx) {
        io.println("Index: ${idx}")
    })
    
    io.println("Done")
}