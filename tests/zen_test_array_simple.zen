// Simple test for Array<T> functionality
{ io, get_default_allocator } = @std

main = () void {
    io.println("=== Simple Array Test ===")
    
    // Create array
    alloc = get_default_allocator()
    arr: Array<i32> = Array.new(alloc, 10, 0)
    
    // Push values
    arr.push(42)
    arr.push(100)
    
    // Get values
    val0 = arr.get(0)
    val1 = arr.get(1)
    
    io.println("arr[0] = ${val0}")
    io.println("arr[1] = ${val1}")
    
    // Get length
    len = arr.len()
    io.println("Length: ${len}")
    
    io.println("=== Test Passed ===")
}