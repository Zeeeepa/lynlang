// Test pointer operations with structs

{ io } = @std

Point: {
    x: i32,
    y: i32
}

main = () void {
    // Create a point
    point = Point { x: 100, y: 200 }
    
    // Create an immutable pointer
    point_ptr: Ptr<Point> = point.ref()
    
    // Access struct fields through pointer
    x_val = point_ptr.val.x
    y_val = point_ptr.val.y
    
    io.print("Point x via ptr: ")
    io.print_int(x_val)
    io.println("")
    
    io.print("Point y via ptr: ")
    io.print_int(y_val)
    io.println("")
}
