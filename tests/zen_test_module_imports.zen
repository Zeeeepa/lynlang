// Test file for module-level imports
// This file demonstrates the correct import syntax

// Module-level imports (no comptime wrapper needed)
core = @std
build = @std
io := build.import("io")
mem := build.import("memory")
string := build.import("string")

// Test that imports work
test_imports = () i32   {
    // Use imported modules
    io.print("Testing module imports\n")
    
    // Test core module
    r := core.range(0, 5)
    sum := 0
    i := 0
    loop {
        if i >= 5 {
            break
        }
        sum = sum + i
        i = i + 1
    }
    
    return sum  // Should return 10
}

main = () i32   {
    result := test_imports()
    io.print_int(result)
    return 0
}