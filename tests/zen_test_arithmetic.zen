// Test arithmetic operations from LANGUAGE_SPEC.zen

{ io } = @std

main = () void {
    io.println("=== Arithmetic Tests ===")
    
    // Integer arithmetic
    a = 100
    b = 25
    
    sum = a + b
    diff = a - b  
    prod = a * b
    quot = a / b
    
    // Complex expressions
    expr1 ::= (10 + 20) * 3
    expr2 ::= 100 - (25 * 2)
    expr3 ::= (50 + 50) / 10
    
    // Comparisons
    is_greater = a > b
    is_less = b < a
    is_equal = 10 == 10
    is_not_equal = 10 != 20
    
    io.println("All arithmetic operations completed")
}