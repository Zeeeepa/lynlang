// Simple test for Option<String> pattern matching
{ io } = @std

main = () i32 {
    // Test with string payload - use simpler approach
    msg = Some("hello")
    
    // Extract and print directly
    msg ?
        | .Some(s) {
            io.println("Found message:")
            io.println(s)
        }
        | .None {
            io.println("No message")
        }
    
    0
}