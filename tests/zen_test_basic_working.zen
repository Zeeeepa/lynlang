// Basic test of working features

{ io } = @std

// Simple struct
Point: {
    x :: f64,
    y :: f64
}

main = () void {
    io.println("=== Zen Language Basic Test ===")
    
    // Variables
    name = "Zen"
    version = 1.0
    io.println("Language: ${name} v${version}")
    
    // Mutable variables
    counter ::= 0
    counter = counter + 1
    io.println("Counter: ${counter}")
    
    // Structs
    p = Point { x: 10.5, y: 20.5 }
    io.println("Point: (${p.x}, ${p.y})")
    
    // Pattern matching
    is_ready = true
    is_ready ? {
        io.println("Ready to go!")
    }
    
    // Loops
    io.println("Counting:")
    (0..3).loop((i) {
        io.println("  ${i}")
    })
    
    io.println("=== Test Complete ===")
}