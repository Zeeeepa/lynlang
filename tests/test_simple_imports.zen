// Simple demonstration of correct import syntax
// This shows that imports work at module level without comptime

// Module-level imports (CORRECT - no comptime wrapper)
{ Option, Some, None, Result, Ok, Err } = @std
// { min, max, abs } = @std.math  // Math functions need separate handling
// build = @std  // Module assignment not yet supported

// Simple test using Option/Result types
calculate = () i32   {
    // Test Option type
    opt = Some(10)
    value = opt ?
        | .Some(v) { v }
        | .None { 0 }
    
    // Test Result type  
    res = Ok(20)
    value2 = res ?
        | .Ok(v) { v }
        | .Err(_) { 0 }
    
    // Return sum
    result = value + value2
    return result  // 10 + 20 = 30
}

// Main function
main = () i32   {
    result = calculate()
    result == 30 ?
        | true { 0 }  // Return 0 for success
        | false { 1 }  // Return 1 if not expected value
}