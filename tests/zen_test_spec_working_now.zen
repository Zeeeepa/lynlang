// Test file showing what actually works from LANGUAGE_SPEC.zen
// Run: ./target/release/zen tests/zen_test_spec_working_now.zen
// Updated: 2025-01-23

{ io } = @std

main = () void {
    io.println("=== Testing LANGUAGE_SPEC.zen Features ===")
    
    // 1. Basic immutable assignment (from spec line 300-301)
    io.println("1. Immutable assignment:")
    x = 42  // Works!
    io.println(x)
    
    // 2. Typed immutable assignment (from spec line 303)
    io.println("2. Typed assignment:")
    z: i32 = 20  // Works!
    flag: bool = true  // Works with explicit type!
    io.println(z)
    io.println(flag)
    
    // 3. Basic types (partial)
    io.println("3. Basic types:")
    i = 100        // i32/i64 works
    f = 3.14       // f64 works
    s = "Hello, Zen!"  // strings work
    io.println(i)
    io.println(f)
    io.println(s)
    
    // 4. Arithmetic operations (basic)
    io.println("4. Arithmetic:")
    sum = 20 + 10
    diff = 20 - 10
    prod = 20 * 10
    quot = 100 / 4
    io.println(sum)
    io.println(diff)
    io.println(prod)
    io.println(quot)
    
    // 5. Boolean literals and typed booleans work
    io.println("5. Boolean support:")
    io.println(true)   // Direct literals work
    io.println(false)
    b: bool = true     // Typed booleans work
    io.println(b)
    
    // 6. @std import works (io module)
    io.println("6. Standard library access (@std.io) works!")
    
    io.println("=== End of Test ===")
}