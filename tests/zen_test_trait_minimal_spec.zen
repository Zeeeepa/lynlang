// Testing trait implementation from LANGUAGE_SPEC.zen
{ io, math } = @std

// Define a simple struct
Circle: {
    radius: f64,
}

// Define a trait
Area: {
    calculate_area: (self) f64,
}

// Implement the trait
Circle.implements(Area, {
    calculate_area = (self) f64 {
        return math.pi * self.radius * self.radius
    },
})

main = () void {
    io.println("=== Trait Test ===")
    
    c = Circle { radius: 5.0 }
    area = c.calculate_area()
    
    io.println("Circle radius: ${c.radius}")
    io.println("Circle area: ${area}")
    io.println("âœ“ Trait implementation works")
}