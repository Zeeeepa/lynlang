// Test closure with params returning plain Result
{ io, Result , get_default_allocator} = @std

main = () i32 {
    alloc = get_default_allocator()
    // Very simple closure with params
    add = (a: i32, b: i32) {
        return Result.Ok(a + b)
    }
    
    // Call it
    result = add(10, 5)
    io.println("Called closure with params")
    
    // Pattern match without raise
    result ?
        | Result.Ok(val) { 
            io.println("Got value: ${val}")
        }
        | Result.Err(e) { 
            io.println("Got error: ${e}")
        }
    
    return 0
}