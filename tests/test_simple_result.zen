{ io, Result } = @std

main = () void {
    io.println("=== Testing Simple Result ===")
    
    // Create a simple Result
    result = Result.Ok(42)
    
    // Extract value
    result ?
        | Result.Ok(val) {
            io.println("Value: ${val}")
            val == 42 ?
                | true { io.println("✓ Simple Result works!") }
                | false { io.println("✗ Wrong value: ${val}") }
        }
        | Result.Err(e) { io.println("Error: ${e}") }
}