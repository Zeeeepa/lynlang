// Test various range operations beyond basic loops
{ io } = @std

main = () i32 {
    io.println("Testing range operations:")
    
    // Basic range
    io.println("\nBasic range (0..5):")
    (0..5).loop((i) {
        io.println("  i = ${i}")
    })
    
    // Inclusive range 
    io.println("\nInclusive range (1..=3):")
    (1..=3).loop((i) {
        io.println("  i = ${i}")
    })
    
    // Range in variable
    io.println("\nRange stored in variable:")
    r = (10..15)
    r.loop((i) {
        io.println("  i = ${i}")
    })
    
    // Range with literal bounds
    io.println("\nRange with literal bounds:")
    (2..5).loop((i) {
        io.println("  i = ${i}")
    })
    
    // Sum using range
    io.println("\nSum of range (1..=5):")
    sum ::= 0
    (1..=5).loop((i) {
        sum = sum + i
    })
    io.println("  sum = ${sum}")
    
    // Conditional printing in range
    io.println("\nConditional printing in range:")
    (0..10).loop((i) {
        i < 5 ? 
            | true { 
                io.println("  i = ${i}")
            }
            | false { 
                // Skip printing after 5
            }
    })
    
    io.println("\nAll range tests completed!")
    return 0
}