// Test immutable forward declarations as per LANGUAGE_SPEC.zen lines 299-300
{ io } = @std

main = () void {
    // Immutable forward declaration (line 299)
    x: i32
    x = 10  // First assignment should work (line 300)
    
    // Mutable forward declaration (line 303-304)
    w :: i32
    w = 20
    w = 30  // Should allow reassignment
    
    io.println("Forward declaration test passed!")
    io.println("x = ${x}")
    io.println("w = ${w}")
}