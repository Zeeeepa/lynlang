// Test pointers from LANGUAGE_SPEC.zen lines 363-372

{ io } = @std

Point: {
    x:: f64,
    y:: f64
}

main = () void {
    // Create a point
    p = Point { x: 10.0, y: 20.0 }
    
    // Get pointer types (spec syntax)
    ptr: Ptr<Point> = p.ref()
    mut_ptr: MutPtr<Point> = p.mut_ref()
    
    // Access through pointer using .val
    io.println("Via ptr: x=${ptr.val.x}, y=${ptr.val.y}")
    
    // Mutate through mut pointer
    mut_ptr.val.x = 30.0
    io.println("After mutation: x=${p.x}")
    
    // Get address
    io.println("Address: ${ptr.addr}")
}