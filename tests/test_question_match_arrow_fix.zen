// Test QuestionMatch type inference with arrow syntax fix
{ io, Option } = @std

main = () i32 {
    // Test without explicit type annotation
    opt1 = Option.None
    
    // Use block syntax to avoid the arrow issue temporarily
    res = opt1 ?
        | Option.Some(x) {
            x + 10
        }
        | Option.None {
            42
        }
    
    io.println("Result: ${res}")
    
    // Also test with Some case using block syntax
    opt2 = Option.Some(100)
    res2 = opt2 ?
        | Option.Some(x) {
            x + 10
        }
        | Option.None {
            42
        }
    
    io.println("Result2: ${res2}")
    
    0
}