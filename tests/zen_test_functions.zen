// Test function definitions from LANGUAGE_SPEC.zen

{ io } = @std

// Simple functions
add = (a: i32, b: i32) i32 {
    return a + b
}

multiply = (x: i32, y: i32) i32 {
    return x * y
}

// Void function
print_message = (msg: string) void {
    io.println(msg)
}

// Function with multiple parameters
calculate = (a: i32, b: i32, c: i32) i32 {
    temp = a + b
    result = temp * c
    return result
}

main = () void {
    io.println("=== Function Tests ===")
    
    // Test function calls
    sum = add(10, 20)
    product = multiply(5, 6)
    
    // Test void function
    print_message("Testing void function")
    
    // Test complex function
    result = calculate(2, 3, 4)
    
    // Nested function calls
    nested = add(multiply(2, 3), add(4, 5))
    
    io.println("Function tests completed")
}