// Simple Option test
{ io } = @std

main = () void {
    // Test with hardcoded Some
    val = Some(42)
    io.println("Created Some(42)")
    
    // Test with hardcoded None  
    empty = None
    io.println("Created None")
    
    // Simple pattern match
    val ?
        | Some(x) { io.println("Got: ${x}") }
        | None { io.println("Empty") }
    
    // Second pattern match    
    empty ?
        | Some(y) { io.println("Got: ${y}") }
        | None { io.println("Empty again") }
}
