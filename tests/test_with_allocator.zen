// Test that collections work with get_default_allocator
{io, get_default_allocator, DynVec, HashMap} = @std

main = () void {
    io.println("Testing collections with get_default_allocator")
    
    // Get allocator - this returns a pointer marker
    alloc = get_default_allocator()
    
    // Create HashMap with allocator
    io.println("Creating HashMap...")
    map = HashMap<i32, i32>(alloc)
    io.println("HashMap created successfully!")
    
    // Create DynVec with allocator
    io.println("Creating DynVec...")
    vec = DynVec<i32>(alloc)
    io.println("DynVec created successfully!")
    
    io.println("All collections work with allocator!")
}