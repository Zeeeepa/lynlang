// Test math.pi constant from LANGUAGE_SPEC.zen
{ io, math } = @std

// Function using math.pi
area = (radius: f64) f64 {
    return math.pi * radius * radius
}

main = () void {
    io.println("Testing math.pi constant...")
    
    // Direct use of math.pi
    io.println("math.pi = ${math.pi}")
    
    // Use in calculation
    r = 5.0
    circle_area = area(r)
    io.println("Area of circle (r=5): ${circle_area}")
    
    // Verify value is correct
    expected = 78.53981633974483
    io.println("Expected area: ${expected}")
}