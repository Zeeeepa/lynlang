// Test simple pattern matching from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    io.println("=== Testing Pattern Matching ===")
    
    // Boolean pattern matching (from spec lines 352-355, 358-361)
    is_ready = true
    is_ready ? { 
        io.println("Starting game!") 
    }
    
    // Full boolean pattern match (if-else style)
    has_data = false
    has_data ?
        | true { io.println("Processing data...") }
        | false { io.println("Waiting for data...") }
    
    // Test with different values
    flag: bool = true
    flag ?
        | true { io.println("Flag is true") }
        | false { io.println("Flag is false") }
    
    io.println("=== Test Complete ===")
}