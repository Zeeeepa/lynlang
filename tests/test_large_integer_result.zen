// Test Result with large integer payloads
{ io, Result , get_default_allocator} = @std

main = () i32 {
    alloc = get_default_allocator()
    io.println("=== Testing large integer payloads ===")
    
    // Test various integer sizes
    res1 = Result.Ok(314159)
    res1 ?
        | Result.Ok(v) { io.println("Large int: ${v} (expected 314159)") }
        | Result.Err(e) { io.println("Error: ${e}") }
    
    res2 = Result.Ok(1000000)
    res2 ?
        | Result.Ok(v) { io.println("Million: ${v} (expected 1000000)") }
        | Result.Err(e) { io.println("Error: ${e}") }
    
    res3 = Result.Ok(2147483647) // Max i32
    res3 ?
        | Result.Ok(v) { io.println("Max i32: ${v} (expected 2147483647)") }
        | Result.Err(e) { io.println("Error: ${e}") }
    
    0
}