// Test that collections require allocators for NO-GC goal
{ io, get_default_allocator } = @std

main = () void {
    io.println("Testing allocator requirements for NO-GC")
    
    // Get allocator
    alloc = get_default_allocator()
    
    // These should all work with allocator
    map = HashMap<i32, i32>(alloc)
    vec = DynVec<i32>(alloc)
    arr = Array<i32>(alloc, 10, 0)  // allocator, capacity, default_value
    
    io.println("All collections created with allocators")
    
    // Test operations
    map.insert(1, 100)
    vec.push(42)
    arr.push(99)
    
    io.println("Operations completed successfully")
}