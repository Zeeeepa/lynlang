// Test to check type of value returned by .raise()
{ io, Result, Ok, Err } = @std

maybe_fail = (fail: bool) Result<i32, string> {
    fail ? {
        return Err("Failed")
    }
    return Ok(42)
}

main = () i32 {
    // Test direct pattern matching
    result = maybe_fail(false)
    result ?
        | Ok(val) { 
            io.println("Pattern match: ${val}")
        }
        | Err(e) { 
            io.println("Error: ${e}") 
        }
    
    // Create a simple i32 variable for comparison
    simple_int: i32 = 42
    io.println("Simple int: ${simple_int}")
    
    return 0
}