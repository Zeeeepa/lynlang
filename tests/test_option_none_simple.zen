// Test Option.None pattern matching issue
{ io, Option , get_default_allocator} = @std

main = () i32 {
    alloc = get_default_allocator()
    // Test 1: Direct None matching with no variables
    Option.None ?
        | Option.Some(x) {
            io.println("Should not print")
        }
        | Option.None {
            io.println("Direct None works")
        }
    
    // Test 2: Assigned None matching 
    opt = Option.None
    opt ?
        | Option.Some(val) {
            io.println("Should not print")
        }
        | Option.None {
            io.println("Assigned None works")
        }
    
    0
}