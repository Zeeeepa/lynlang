// Simple test for basic pointer operations
{ io } = @std

main = () void {
    // Test 1: Basic value and pointer
    x = 42
    x_ptr = x.ref()      // Create pointer using .ref()
    
    io.print("Original value: ")
    io.print_int(x)
    io.println("")
    
    // Test 2: Dereference pointer
    value = x_ptr.val    // Dereference using .val
    io.print("Via pointer: ")
    io.print_int(value)
    io.println("")
    
    // Test 3: Mutable variable and pointer
    y ::= 100
    y_ptr = y.mut_ref()  // Create mutable pointer
    
    io.print("Mutable original: ")
    io.print_int(y)
    io.println("")
    
    // Test pointer address
    addr = x_ptr.addr    // Get address
    io.print("Pointer address: ")
    io.print_int(addr)
    io.println("")
    
    io.println("Basic pointer test complete!")
}
