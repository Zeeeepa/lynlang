// Debug test for Option return
{ io, Option } = @std

main = () void {
    io.println("=== Debug Option Return ===")
    
    // Direct Option creation (not in closure)
    opt1: Option<i32> = Option.Some(100)
    opt1 ?
        | Option.Some(v) { io.println("opt1 = Some(${v})") }
        | Option.None { io.println("opt1 = None") }
    
    // Function that returns Option<i32>
    create_option = () Option<i32> {
        Option.Some(42)
    }
    
    result = create_option()
    result ?
        | Option.Some(v) { io.println("result = Some(${v})") }
        | Option.None { io.println("result = None") }
    
    io.println("Test complete!")
}