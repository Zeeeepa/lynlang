// Test loops from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    io.println("=== Testing Loops ===")
    
    // Range loop (lines 432-434)
    io.println("Range 0..5:")
    (0..5).loop((i) {
        io.println(i)
    })
    
    // Infinite loop with break (lines 452-459)
    io.println("Infinite loop with break:")
    counter ::= 0
    loop(() {
        counter = counter + 1
        counter > 3 ?
            | true { break }
            | false { io.println(counter) }
    })
    
    io.println("=== Test Complete ===")
}