// Test closure with params and ternary
{ io, Result } = @std

main = () i32 {
    // Simple closure with params
    multiply = (a: i32, b: i32) {
        return Result.Ok(a * b)
    }
    
    val = multiply(3, 7).raise()
    io.println("Raised value: ${val}")
    
    // Test with simple if pattern
    val == 21 ? {
        io.println("✓ Value is correct")
    }
    
    // Test with dual condition
    val != 21 ? {
        io.println("✗ Value is wrong")
        return 1
    }
    
    return 0
}