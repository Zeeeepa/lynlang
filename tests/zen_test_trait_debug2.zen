// Test trait with debugging
{ io, math } = @std

Point: {
    x: f64,
    y: f64,
}

Geometric: {
    area: (self) f64,
}

Circle: {
    center: Point,
    radius: f64,
}

Circle.implements(Geometric, {
    area = (self) f64 {
        io.println("In area method, self.radius = ${self.radius}")
        io.println("math.pi = ${math.pi}")
        result = math.pi * self.radius * self.radius
        io.println("Computed result = ${result}")
        return result
    },
})

main = () void {
    circle = Circle { 
        center: Point { x: 0.0, y: 0.0 }, 
        radius: 5.0 
    }
    
    io.println("Before calling area, circle.radius = ${circle.radius}")
    area = circle.area()
    io.println("After calling area, result = ${area}")
}