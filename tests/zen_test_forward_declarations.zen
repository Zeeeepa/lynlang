// Test forward variable declarations from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    io.println("Testing forward declarations")
    
    // Test 1: Immutable forward declaration
    x: i32  // Forward declaration
    io.println("Declared x")
    x = 10  // Assignment
    io.println("x = ${x}")
    
    // Test 2: Mutable forward declaration
    y:: i32  // Mutable forward declaration
    io.println("Declared mutable y")
    y = 20
    io.println("y = ${y}")
    y = 30  // Reassignment
    io.println("y after update = ${y}")
    
    // Test 3: Forward declaration with later type
    z: f64
    z = 3.14
    io.println("z = ${z}")
    
    io.println("All forward declaration tests passed")
}