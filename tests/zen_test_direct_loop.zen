// Test direct loop vs functional loop

{ io , get_default_allocator} = @std

main = () void {
    alloc = get_default_allocator()
    // Direct loop statement 
    counter ::= 0
    loop {
        counter >= 3 ? { break }
        io.println("Loop: ${counter}")
        counter = counter + 1
    }
    
    io.println("Final: ${counter}")
}