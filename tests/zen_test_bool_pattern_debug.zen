// Debug test for boolean pattern matching
{ io } = @std

main = () void {
    io.println("Testing boolean patterns:")
    
    // Test 1: Single boolean pattern (not working)
    is_ready = true
    io.println("Before pattern match")
    is_ready ? {
        io.println("Single pattern: Ready!")
    }
    io.println("After pattern match")
    
    // Test 2: Full pattern match (working)
    has_data = true
    has_data ?
        | true { io.println("Full pattern: Has data") }
        | false { io.println("Full pattern: No data") }
    
    // Test 3: False case single pattern
    not_ready = false
    not_ready ? {
        io.println("Should not print this")
    }
    
    io.println("Done")
}