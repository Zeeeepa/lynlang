// Test Option with StaticString
{ io, Option , get_default_allocator} = @std

main = () i32 {
    alloc = get_default_allocator()
    io.println("Testing Option<StaticString>:")
    
    // Create Some(StaticString)
    s = Option.Some("hello world")
    s ?
        | .Some(val) { io.println("Some: ${val}") }
        | .None { io.println("None") }
    
    // Create None
    n: Option<StaticString> = Option.None
    n ?
        | .Some(val) { io.println("Some: ${val}") }
        | .None { io.println("None") }
    
    return 0
}