// Test baseline features from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    // Immutable variables with different syntaxes (from spec lines 299-306)
    x: i32  // Forward declaration
    x = 10
    y = 20  // Immutable assignment
    z: i32 = 30  // Immutable with type
    
    io.println("Basic variables:")
    io.println(x)
    io.println(y)
    io.println(z)
    
    // Arithmetic
    sum = x + y + z
    io.println("Sum:")
    io.println(sum)
    
    // Booleans
    is_ready = true
    io.println("Boolean:")
    io.println(is_ready)
    
    // String
    message = "Testing Zen"
    io.println(message)
}