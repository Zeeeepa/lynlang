// Test explicit pointer types from LANGUAGE_SPEC.zen
// No * or & symbols - only Ptr<>, MutPtr<>, RawPtr<>
{ io } = @std

Point: {
    x:: f64,
    y:: f64
}

main = () void {
    io.println("Testing explicit pointer types...")
    
    // Create a point
    point = Point { x: 10.0, y: 20.0 }
    
    // Get immutable pointer
    point_ptr: Ptr<Point> = point.ref()
    io.println("Ptr address: ${point_ptr.addr}")
    io.println("Ptr value x: ${point_ptr.val.x}")
    
    // Get mutable pointer
    point_mut: MutPtr<Point> = point.mut_ref()
    point_mut.val.x = 30.0
    io.println("After mutation x: ${point.x}")
    
    io.println("Pointer test complete")
}