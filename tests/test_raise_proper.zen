// Proper test for .raise() issue
{ io, Result, Ok, Err } = @std

maybe_fail = (fail: bool) Result<i32, string> {
    fail ? {
        return Err("Failed")
    }
    return Ok(42)
}

process_value = () Result<i32, string> {
    value = maybe_fail(false).raise()
    io.println("Got value: ${value}")
    return Ok(value)
}

main = () i32 {
    result = process_value()
    result ?
        | Ok(val) { io.println("Final: ${val}") }
        | Err(e) { io.println("Error: ${e}") }
    
    return 0
}