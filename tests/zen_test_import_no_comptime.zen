// Test that imports work correctly without comptime blocks
// This is the new, correct way to import modules in Zen

// Standard library imports - NO comptime needed
core = @std
math = @std
vec = @std
io = @std
fs = @std
string = @std

// Test function using imports
test_imports_work = () bool   {
    // Use imported modules
    io.print("Testing imports without comptime\n")
    
    // Test math module
    abs_val := math.abs(-42)
    abs_val != 42 ? {
        return false
    }
    
    // Test string operations
    str := string.new("Hello")
    str = string.append(str, ", Zen!")
    
    // Test vector operations
    v := vec.new()
    v = vec.push(v, 1)
    v = vec.push(v, 2)
    v = vec.push(v, 3)
    
    return vec.len(v) == 3
}

// Main function
main = () i32   {
    io.print("=== Import System Test (No Comptime) ===\n")
    
    test_imports_work() ? {
        io.print("✓ All import tests passed!\n")
        return 0
    } | false {
        io.print("✗ Import tests failed\n")
        return 1
    }
}