// Basic test of LANGUAGE_SPEC.zen features
// Testing what currently works

io = @std.io

// Test 1: Basic syntax
main = () void {
    // Immutable assignment
    x = 10
    
    // Mutable assignment with ::=
    y ::= 20
    y = y + 1
    
    io.println("x = ${x}")
    io.println("y = ${y}")
    
    // Simple pattern matching
    is_ready = true
    is_ready ?
        | true { io.println("Ready!") }
        | false { io.println("Not ready") }
}