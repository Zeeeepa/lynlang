// ============================================================================

test_loops_and_ranges = () void {
    io.println("=== Loops and Ranges (Lines 432-460) ===")
    
    // Line 432-434: Range iteration
    io.print("‚úì Range (0..5): ")
    (0..5).loop((i) {
        io.print("${i} ")
    })
    io.println("")
    
    // Different range
    io.print("‚úì Range (10..13): ")
    (10..13).loop((i) {
        io.print("${i} ")
    })
    io.println("")
    
    // Line 453-460: Infinite loop with break
    counter ::= 0
    io.print("‚úì Infinite loop with break: ")
    loop {
        counter = counter + 1
        io.print("${counter} ")
        counter >= 5 ?
            | true { break }
            | false { }
    }
    io.println("")
    
    // Loops can use pattern matching for control
    sum ::= 0
    (1..4).loop((i) {
        sum = sum + i
    })
    io.println("‚úì Sum of 1..3 = ${sum}")
    
    io.println("")
}

