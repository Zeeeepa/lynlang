// Test ternary return types
{ io , get_default_allocator} = @std

main = () i32 {
    alloc = get_default_allocator()
    val = 21
    
    // Assigning ternary result - this should work
    x = val == 21 ? | true { 42 } | false { 0 }
    io.println("x = ${x}")
    
    // Just using ternary for side effects - this should also work
    val == 21 ?
        | true { io.println("Value is 21") }
        | false { io.println("Value is not 21") }
    
    return 0
}