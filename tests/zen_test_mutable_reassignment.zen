// Test mutable variable reassignment from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    // Test mutable variable reassignment (from spec lines 299-306)
    x ::= 10      // Mutable variable
    io.println("Initial x: ${x}")
    
    x = 20        // Reassignment
    io.println("After reassignment: ${x}")
    
    // Test with more complex expressions
    a ::= 0
    b ::= 1
    io.println("a: ${a}, b: ${b}")
    
    temp = a + b
    a = b         // Reassign a
    b = temp      // Reassign b  
    io.println("After swap - a: ${a}, b: ${b}")
}