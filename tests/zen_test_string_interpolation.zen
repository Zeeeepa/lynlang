// Test string interpolation feature

{ io } = @std

main = () void {
    name = "Zen"
    version = 42
    pi = 3.14159
    is_ready = true
    
    // Simple interpolation
    io.println("Hello, ${name}!")
    
    // Multiple interpolations
    io.println("Language: ${name}, Version: ${version}")
    
    // Numeric interpolation
    io.println("Pi is approximately ${pi}")
    
    // Boolean interpolation
    io.println("System ready: ${is_ready}")
    
    // Expression interpolation
    x = 10
    y = 20
    io.println("Sum of ${x} and ${y} is ${x + y}")
}