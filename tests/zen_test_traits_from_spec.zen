// Test traits from LANGUAGE_SPEC.zen lines 124-163

{ io, math } = @std
{ requires, implements } = @std

// Trait definition from spec
Geometric: {
    area: (self) f64,
    perimeter: (self) f64
}

Circle: {
    center: Point,
    radius: f64
}

Point: {
    x: f64,
    y: f64
}

// Implement trait for Circle
Circle.implements(Geometric, {
    area = (self) f64 {
        return math.pi * self.radius * self.radius
    },
    perimeter = (self) f64 {
        return 2.0 * math.pi * self.radius
    }
})

main = () void {
    c = Circle { 
        center: Point { x: 0.0, y: 0.0 },
        radius: 5.0 
    }
    io.println("Circle area: ${c.area()}")
}