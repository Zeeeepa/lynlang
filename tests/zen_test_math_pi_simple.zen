// Simple test for math.pi
{ io, math } = @std

main = () void {
    io.println("Testing math.pi:")
    pi_value = math.pi
    io.println("math.pi = ${pi_value}")
    
    // Test a simple calculation
    radius = 5.0
    area = pi_value * radius * radius
    io.println("Circle with radius 5: area = ${area}")
    
    // Test direct use
    area2 = math.pi * 10.0 * 10.0
    io.println("Circle with radius 10: area = ${area2}")
}