// Test Option type from LANGUAGE_SPEC.zen (line 109)

{ io } = @std

// Option type - no null!
Option<T>: Some(T) | None

main = () void {
    io.println("=== Testing Option Type from LANGUAGE_SPEC ===")
    
    // Test Some variant
    maybe_value: Option<i32> = Some(42)
    maybe_value ?
        | Some(val) { io.println("Found value: ${val}") }
        | None { io.println("No value") }
    
    // Test None variant  
    empty: Option<i32> = None
    empty ?
        | Some(val) { io.println("Value: ${val}") }
        | None { io.println("Option is None") }
    
    // Test with different type
    maybe_text: Option<string> = Some("Hello Zen")
    maybe_text ?
        | Some(text) { io.println("Text: ${text}") }
        | None { io.println("No text") }
    
    io.println("\n=== Option Test Complete ===")
}