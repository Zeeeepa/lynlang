// Test scope-aware find references
// This tests that finding references to "value" in one function
// doesn't include "value" from other functions

add = (a: i32, b: i32) i32 {
    value = a + b
    return value
}

multiply = (x: i32, y: i32) i32 {
    value = x * y
    return value
}

test_find_refs = () i32 {
    value = 42
    result = add(value, 10)
    return result
}

main = () i32 {
    value = 100
    x = add(5, 10)
    y = multiply(3, 4)
    return value
}
