// Test mutable variables from LANGUAGE_SPEC.zen
{ io } = @std

main = () void {
    io.println("=== Testing Mutable Variables ===")
    
    // Immutable variables (from spec)
    x = 10              // Inferred immutable
    y: i32 = 20         // Typed immutable
    io.println(x)
    io.println(y)
    
    // Mutable variables (from spec)
    a ::= 30            // Inferred mutable
    io.println(a)
    a = 40              // Reassign mutable
    io.println(a)
    
    b:: i32 = 50        // Typed mutable
    io.println(b)
    b = 60              // Reassign
    io.println(b)
    
    // Test with different types
    counter ::= 0
    io.println(counter)
    counter = counter + 1
    io.println(counter)
    counter = counter + 1
    io.println(counter)
    
    // Mutable float
    value:: f64 = 3.14
    io.println(value)
    value = 2.71
    io.println(value)
    
    io.println("=== Test Complete ===")
}