// Basic test with simple features
{ io } = @std

main = () void {
    io.println("Testing basic Zen features")
    
    // Simple variables
    x ::= 10
    y ::= 20
    z ::= x + y
    
    io.println("x = ${x}")
    io.println("y = ${y}")
    io.println("x + y = ${z}")
    
    // Simple loop
    (0..3).loop((i) {
        io.println("Count: ${i}")
    })
    
    io.println("Done!")
}