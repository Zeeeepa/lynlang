// Basic test for currently working features
// Based on tests/working examples

{ io } = @std

main = () void {
    io.println("=== Testing Basic Zen Features ===")
    
    // 1. Variable declarations 
    io.println("\n1. Variables:")
    x = 10
    y ::= 20  // mutable
    
    io.println("x = ${x}")
    io.println("y = ${y}")
    
    // 2. Basic arithmetic
    io.println("\n2. Arithmetic:")
    sum = x + y
    io.println("${x} + ${y} = ${sum}")
    
    // 3. String interpolation
    io.println("\n3. String Interpolation:")
    name = "Zen"
    io.println("Hello, ${name}!")
    
    io.println("\n=== Tests Complete ===")
}