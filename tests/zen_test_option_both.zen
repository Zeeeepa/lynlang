// Test Option with both i32 and string

{ io } = @std

Option<T>: Some(T) | None

main = () void {
    // Test with i32 first
    maybe_int: Option<i32> = Some(42)
    maybe_int ?
        | Some(v) { 
            io.println("i32 value: ${v}")
        }
        | None { 
            io.println("Was None") 
        }
    
    // Then test with string
    maybe_string: Option<string> = Some("Hello")
    maybe_string ?
        | Some(s) {
            io.println("string value: ${s}")
        }
        | None {
            io.println("Was None")
        }
}