// Test infinite loop with break
{ io } = @std

main = () void {
    io.println("Testing infinite loop")
    
    counter ::= 0
    loop(() {
        counter = counter + 1
        io.println("Loop iteration: ${counter}")
        
        // Break after 3 iterations
        (counter >= 3) ? {
            break
        }
    })
    
    io.println("Loop ended, counter = ${counter}")
}