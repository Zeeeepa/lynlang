// Test range loops from the spec
{ io } = @std

main = () void {
    io.println("Testing range loops")
    
    // Basic range loop
    io.println("Count 0 to 4:")
    (0..5).loop((i) {
        io.println("  Count: ${i}")
    })
    
    // Inclusive range
    io.println("Count 1 to 3 inclusive:")
    (1..=3).loop((i) {
        io.println("  Count: ${i}")
    })
    
    io.println("Done!")
}