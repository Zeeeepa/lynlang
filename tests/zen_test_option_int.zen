// Debug Option type with integer
{ io } = @std

Option<T>: Some(T) | None

main = () void {
    // Test with integer
    maybe_int: Option<i32> = Some(42)
    maybe_int ?
        | Some(x) {
            io.println("Integer found:")
            io.println(x)
        }
        | None {
            io.println("No integer")
        }
}
