// Test range features from LANGUAGE_SPEC.zen (lines 432-440)
{ io } = @std

main = () void {
    io.println("=== Testing Range Features ===")
    
    // Range iteration (lines 432-434)
    io.println("\nBasic range (0..5):")
    (0..5).loop((i) {
        io.println("  Count: ${i}")
    })
    
    // Test larger range
    io.println("\nRange (10..15):")
    (10..15).loop((i) {
        io.println("  Value: ${i}")
    })
    
    // Test in a sum calculation
    io.println("\nSum of (0..10):")
    sum ::= 0
    (0..10).loop((i) {
        sum = sum + i
    })
    io.println("  Sum = ${sum}")
    
    io.println("\n=== Range Tests Completed ===")
}