// Test UFC (Uniform Function Call) from LANGUAGE_SPEC.zen
{ io } = @std

// Define a function that can be called as method
double = (x: i32) i32 {
    return x * 2
}

main = () void {
    // Test UFC with number
    num = 5
    result = num.double()  // UFC: function called as method
    io.println("Double of 5 is ${result}")
    
    // Test range.loop() - UFC on range
    (0..3).loop((i) {
        io.println("Loop: ${i}")
    })
}