// Test .raise() with error case
{ io, Result, Ok, Err } = @std

maybe_fail = (fail: bool) Result<i32, string> {
    fail ? {
        return Err("Failed as expected")
    }
    return Ok(42)
}

process_value = () Result<i32, string> {
    // This should propagate the error
    value = maybe_fail(true).raise()
    io.println("This should not print: ${value}")
    return Ok(value)
}

main = () i32 {
    result = process_value()
    result ?
        | Ok(val) { io.println("Got Ok: ${val}") }
        | Err(e) { io.println("Got Error: ${e}") }
    
    return 0
}