// Simple test to verify basic LANGUAGE_SPEC.zen features

{ io } = @std

main = () void {
    io.println("=== Basic Zen Language Test ===")
    
    // Test 1: Variables (LANGUAGE_SPEC.zen lines 298-306)
    x = 10
    io.println("Immutable x = ${x}")
    
    y ::= 20
    y = 25
    io.println("Mutable y = ${y}")
    
    // Test 2: Pattern matching (lines 352-361)
    is_ready = true
    is_ready ? {
        io.println("System ready!")
    }
    
    // Test 3: Range loop (lines 432-434)
    io.print("Range: ")
    (0..3).loop((i) {
        io.print("${i} ")
    })
    io.println("")
    
    // Test 4: Option type (lines 462-473)
    maybe: Option<i32> = Some(42)
    maybe ?
        | Some(v) { io.println("Value: ${v}") }
        | None { io.println("No value") }
    
    io.println("=== Tests Complete ===")
}