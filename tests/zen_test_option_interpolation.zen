{ io } = @std

Option<T>: Some(T) | None

main = () void {
    io.println("Testing Option string interpolation:")
    
    // Test Some variant
    some_val: Option<i32> = Some(42)
    io.println("some_val: ${some_val}")
    
    // Test None variant  
    none_val: Option<i32> = None
    io.println("none_val: ${none_val}")
    
    // Test in pattern matching
    some_val ?
        | Some(v) { io.println("Value is Some(${v})") }
        | None { io.println("Value is None") }
}
