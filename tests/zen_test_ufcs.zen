// Test UFCS (Uniform Function Call Syntax)

Rectangle: {
    width: f64,
    height: f64,
}

// Define function with receiver as first param
area = (rect: Rectangle) f64   {
    rect.width * rect.height
}

perimeter = (rect: Rectangle) f64   {
    2.0 * (rect.width + rect.height)
}

main = () i32   {
    my_rect := Rectangle{ width: 10.0, height: 5.0 }
    
    // Test UFCS - call function as method
    a := my_rect.area()
    p := my_rect.perimeter()
    
    io.print("Area: ")
    io.print_float(a)
    io.println("")
    
    io.print("Perimeter: ")
    io.print_float(p)
    io.println("")
    
    return 0
}