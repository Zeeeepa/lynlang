// Test simple Option usage
{ io } = @std
{ Option } = @std.option

main = () void {
    // Try without type annotation first
    maybe_val = Some(42)
    
    maybe_val ?
        | Some(v) { io.println("Value: ${v}") }
        | None { io.println("No value") }
    
    // Test with None
    empty = None
    empty ?
        | Some(v) { io.println("Should not print") }
        | None { io.println("Empty as expected") }
}