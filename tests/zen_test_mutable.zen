// Test mutable variables from spec
{ io } = @std

main = () void {
    // Test mutable assignment (::=)
    v ::= 30  // Mutable assignment
    io.println("Initial v:")
    io.println(v)
    
    v = 40  // Reassignment
    io.println("After reassignment:")
    io.println(v)
    
    // Mutable with type
    u :: i32 = 50
    io.println("Initial u:")
    io.println(u)
    
    u = 60
    io.println("After reassignment:")
    io.println(u)
}