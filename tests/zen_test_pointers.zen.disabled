// Test pointer types

{ io } = @std

Point: {
    x: f64,
    y: f64,
}

main = () void {
    io.println("Testing pointer types:")
    
    // Create a Point
    p ::= Point { x: 10.0, y: 20.0 }
    
    // Get an immutable pointer
    ptr: Ptr<Point> = p.ref()
    io.println("Ptr address: ${ptr.addr}")
    io.println("Ptr value x: ${ptr.val.x}")
    
    // Get a mutable pointer
    mut_ptr: MutPtr<Point> = p.mut_ref()
    mut_ptr.val.x = 30.0
    io.println("After mutation x: ${p.x}")
    
    // Raw pointer (for FFI)
    raw: RawPtr<Point> = p.ref()
    io.println("Raw ptr address: ${raw.addr}")
}
