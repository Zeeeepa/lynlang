// Test nested struct field access
{ io } = @std

// Simple structs for testing
Point: {
    x: f64,
    y: f64,
}

Rectangle: {
    top_left: Point,
    bottom_right: Point,
}

main = () void {
    // Create rectangle with nested points
    rect = Rectangle {
        top_left: Point { x: 0.0, y: 0.0 },
        bottom_right: Point { x: 10.0, y: 5.0 },
    }
    
    // Access nested fields directly
    io.println("Top left x: ${rect.top_left.x}")
    io.println("Top left y: ${rect.top_left.y}")
    io.println("Bottom right x: ${rect.bottom_right.x}")
    io.println("Bottom right y: ${rect.bottom_right.y}")
    
    // Calculate area
    width = rect.bottom_right.x - rect.top_left.x
    height = rect.bottom_right.y - rect.top_left.y
    area = width * height
    
    io.println("Width: ${width}")
    io.println("Height: ${height}")
    io.println("Area: ${area}")
}