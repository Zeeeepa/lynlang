// Test simple range loop with mixed types
{io, Array, get_default_allocator} = @std

main = () void {
    alloc = get_default_allocator()
    // Create an i64 value
    arr = Array<i32>()
    arr.push(1)
    arr.push(2)
    arr.push(3)
    length = arr.len()  // This returns i64
    
    io.println("Length type is i64: ${length}")
    
    // Try a range with mixed types (0 is i32, length is i64)
    (0..length).loop((i) {
        io.println("i = ${i}")
    })
    
    io.println("Test passed!")
}