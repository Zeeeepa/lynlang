// Test struct field access
{ io } = @std

// Define a simple struct
Point: {
    x: i32,
    y: i32
}

// Define a struct with mutable fields
Counter: {
    value :: i32,
    label: String
}

main = () void {
    // Create a Point
    p = Point { x: 10, y: 20 }
    
    // Access struct fields
    io.print("Point x: ")
    io.print_int(p.x)
    io.println("")
    
    io.print("Point y: ")
    io.print_int(p.y)
    io.println("")
    
    // Create a Counter with mutable field
    c = Counter { value: 0, label: "test" }
    
    // Read the counter value
    io.print("Counter value: ")
    io.print_int(c.value)
    io.println("")
    
    // TODO: Test field mutation once supported
    // c.value = c.value + 1
}