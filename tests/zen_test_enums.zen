// Test enum functionality from LANGUAGE_SPEC.zen

{ io } = @std

// Define Option type as per spec
Option<T>: Some(T) | None

// Test function that uses Option
process_value = (val: Option<i32>) void {
    val ?
        | Some(v) { io.println("Got value: ${v}") }
        | None { io.println("No value") }
}

main = () void {
    // Test creating Option values
    some_value: Option<i32> = Some(42)
    none_value: Option<i32> = None
    
    process_value(some_value)
    process_value(none_value)
    
    io.println("Enum test complete!")
}