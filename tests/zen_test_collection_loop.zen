// Test collection .loop() method

{ io } = @std

main = () void {
    io.println("Testing collection .loop():")
    
    // Test range loop (this already works)
    io.println("\n1. Range loop:")
    (0..5).loop((i) {
        io.println("  Index: ${i}")
    })
    
    // Test range with step  
    io.println("\n2. Range with step:")
    (0..10).step(2).loop((i) {
        io.println("  Step: ${i}")
    })
}
