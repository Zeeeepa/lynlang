// Test basic features from LANGUAGE_SPEC.zen

{ io } = @std

main = () void {
    // Test immutable assignment
    x = 42
    
    // Test mutable assignment
    counter ::= 0
    counter = counter + 1
    
    // Test boolean pattern matching (short form)
    flag = true
    flag ? {
        io.print("Flag is true!")
    }
    
    // Test full pattern matching
    value = 2
    value ?
        | 0 { io.print("Zero") }
        | 1 { io.print("One") }
        | 2 { io.print("Two") }
        | _ { io.print("Other") }
}