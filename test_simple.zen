// Simple test of key LANGUAGE_SPEC.zen features

// Import from @std using destructuring
{ io } = @std

main = () void {
    // Test = for immutable assignment
    message = "Hello from Zen!"
    io.println(message)
    
    // Test ::= for mutable assignment
    counter ::= 0
    counter = counter + 1
    io.println("Counter: ${counter}")
    
    // Test pattern matching with ? operator
    is_ready = true
    is_ready ? {
        io.println("System is ready!")
    }
    
    // Test full pattern match syntax
    value = 42
    value > 40 ?
        | true => io.println("Value is greater than 40")
        | false => io.println("Value is 40 or less")
    
    // Test defer statement (not implemented yet)
    // defer io.println("Cleanup with defer!")
    
    io.println("Main function complete")
}