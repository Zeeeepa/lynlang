// Test string interpolation

{ io } = @std

main = () void {
    name = "Zen"
    version = 42
    pi = 3.14159
    
    io.println("Hello, ${name}!")
    io.println("Version: ${version}")
    io.println("Pi is approximately ${pi}")
    
    // Test complex expression
    result = 10 + 20
    io.println("10 + 20 = ${result}")
}