// Test file for new import syntax - imports without comptime

// Top-level imports (all imports must be at module level)
core := @std.core
build := @std.build
io := build.import("io")
meta := @std.meta
reflect := build.import("reflect")

// Main function using imported modules
main = () i32 {
    io.print("Hello from new import syntax!\n")
    return 0
}

// Comptime blocks are for meta-programming, not imports
comptime {
    // Generate compile-time constants or tables
    VERSION := "1.0.0"
    TABLE_SIZE := 256
}

// Another function using imports
test_imports = () void {
    core.assert(true)
    io.println("Imports work correctly at module level!")
}